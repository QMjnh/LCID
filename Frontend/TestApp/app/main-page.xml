<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="LCID" icon="" />

    <FlexboxLayout class="page">
        <StackLayout class="form">
            <Label class="header" text="Log-In"></Label>

            <StackLayout class="input-field">
                <TextField id="usr" class="input" hint="Username" text="{{ username }}"/>
            </StackLayout> 


            <StackLayout class="input-field">
                <TextField id="pass" class="input" secure="True" hint="password" text="{{ password }}"/>
            </StackLayout>  

            <StackLayout class="p-20">
                <Button text="Login" tap="{{ logIn }}" class="btn btn-primary"></Button> 
                <Button text="Continue As Guest" tap="navigateToHome" class="btn btn-primary"></Button> 
                <Label text="{{ debug }}" class="h2 text-center" textWap="true" />
                <Label text="{{ origin }}" class="h2 text-center" textWap="true" />
            </StackLayout>


        </StackLayout>
    </FlexboxLayout>
</Page>
