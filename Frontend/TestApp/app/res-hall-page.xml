<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Residence Hall" class="action-bar" icon="">
        <ActionItem tap="onLogout" android.position="popup" text="Logout" android.systemIcon="ic_menu_logout" />
    </ActionBar>

    <StackLayout orientation="vertical" class="main-container">
        <Button text="Generate QRCode" width="300" height="150" class="vertical-button" tap="onGenerateQRCode" />
        <StackLayout orientation="vertical" class="horizontal-button-container">
            
            <FlexboxLayout orientation="horizontal" class="horizontal-button-group">
                <Button text="Residence" width="155" class="horizontal-button" tap="onResidenceHall" />
                <Button text="Dining" width="150" class="horizontal-button" tap="onDiningService" />
                <Button text="Library" width="150" class="horizontal-button" tap="onLibraryCheckout" />
            </FlexboxLayout>
        </StackLayout>
    </StackLayout>
    
</Page>
